<p id="notice"><%= notice %></p>

<h1><%=  @teacher.fullname %>'s students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Progress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= progress_text(student) %></td>
        <td><%= link_to 'Update Progress', student %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


